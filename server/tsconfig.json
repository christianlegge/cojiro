{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2021",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		},
		"resolveJsonModule": true
	},
	"include": ["src/**/*"]
}
